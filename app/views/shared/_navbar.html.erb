<% if current_page?(root_path) %>
  <div class="navbar-mlight bg-transparent d-flex align-items-center fixed-top">
    <!-- first element of flex box -->
    <div class="flex-item">
      <div class="logo logoHome d-flex align-items-center animated invisible">
        <%= link_to "M-Light", root_path %>
      </div>
    </div>
    <!-- second element of flexbox -->
    <div class="flex-item">
      <div class="filter-category d-inline-flex justify-content-center animated invisible">
        <h6 class="mx-3 category" id="tv">TV</h6>
        <h6 class="mx-3 category" id="live">LIVE</h6>
        <h6 class="mx-3 category" id="evenement">EVENT</h6>
        <h6 class="mx-3 category" id="fashion">FASHION</h6>
      </div>
    </div>

    <!-- third element of flexbox -->
    <div class="flex-item">
      <div class="d-flex align-items-center">
      <!-- btn new-project for user signed_in -->
        <% if user_signed_in? %>
          <%= link_to "new project", new_project_path, class:"btn-white mr-3" %>
        <% end %>
        <!-- search zone -->
        <div class="d-flex align-items-center">
          <%= form_tag root_path(anchor: 'all-projects'), class:"form-inline d-flex justify-content-center md-form form-sm active-pink active-pink-2", method: :get do %>
            <div class="md-form my-0">
              <%= text_field_tag :query, params[:query], placeholder: "Find a project", id:"search-input", class:"form-control form-control-sm ml-2 w-77 d-none animated fadeInLeft"%>
              <%#= submit_tag "Search", class: "btn btn-outline-white btn-md my-0 ml-sm-2" %>
            <!-- <div class="search"></div> -->
            </div>
          <% end %>
          <i class="fas fa-search icon-session search-icon"></i>
        </div>
        <!-- end search zone -->

        <p><%= link_to "About Us", contact_path, class:"links ml-3" %></p>
        <p><%= link_to "Contact", contact_path, class:"links ml-3" %></p>

        <div class="icon-session ml-3">
          <i class="far fa-user dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if user_signed_in? %>
              <% if user_signed_in? %>
                <div class="hidden-new-article">
                  <%= link_to "new project", new_project_path, class:"nav-link" %>
                  <div class="dropdown-divider"></div>
                </div>
              <% end %>
              <div class="hidden-links">
                <%= link_to "Contact", contact_path, class:"nav-link" %>
                <div class="dropdown-divider"></div>
              </div>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"nav-link" %>
            <% else %>
              <div class="hidden-links">
                <%= link_to "Contact", contact_path, class:"nav-link" %>
                <div class="dropdown-divider"></div>
              </div>
              <%= link_to "Login", new_user_session_path, class:"nav-link" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
   <div class="navbar-mlight bg-black d-flex justify-content-between fixed-top">

      <!-- first element of flex box -->
      <div class="logo d-flex justify-content-left align-items-center">
        <%= link_to "M-Light", root_path %>
      </div>

      <!-- second element of flexbox -->
      <div class="d-flex justify-content-right align-items-center">

        <!-- btn new-project for user signed_in -->

          <% if user_signed_in? %>
            <%= link_to "new project", new_project_path, class:"btn-white mr-3" %>
          <% end %>


        <!-- search zone -->

          <%= form_tag root_path, class:"form-inline d-flex justify-content-center md-form form-sm active-pink active-pink-2 mt-2", method: :get do %>
            <div class="md-form my-0">
              <%= text_field_tag :query, params[:query], placeholder: "Find a project", id:"search-input", class:"form-control form-control-sm ml-3 w-75 d-none"%>
              <%#= submit_tag "Search", class: "btn btn-outline-white btn-md my-0 ml-sm-2" %>
            <!-- <div class="search"></div> -->
            </div>
          <% end %>

        <!-- end search zone -->

          <i class="fas fa-search mr-3 icon-session"></i>

          <p><%= link_to "Contact", contact_path, class:"links" %></p>


        <div class="icon-session ml-3">
          <i class="fas fa-bars dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if user_signed_in? %>
              <% if user_signed_in? %>
                <div class="hidden-new-article">
                  <%= link_to "new project", new_project_path, class:"nav-link" %>
                  <div class="dropdown-divider"></div>
                </div>
              <% end %>
              <div class="hidden-links">
                <%= link_to "Contact", contact_path, class:"nav-link" %>
                <div class="dropdown-divider"></div>
              </div>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"nav-link" %>
            <% else %>
              <div class="hidden-links">
                <%= link_to "Contact", contact_path, class:"nav-link" %>
                <div class="dropdown-divider"></div>
              </div>
              <%= link_to "Login", new_user_session_path, class:"nav-link" %>
            <% end %>
          </div>
        </div>
      </div>



  </div>

<% end %>



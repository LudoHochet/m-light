<h1><%= @project.name %></h1>

<ul>
  <li> <%= @project.category %> </li>
  <li> <%= @project.date %> </li>
  <li> <%= @project.location %> </li>
  <li> <%= @project.description %> </li>
</ul>
<div class="container show-project">
<% if @project.photos.attached? %>
  <%# @project.photos.each do |photo| %>
    <%#= cl_image_tag photo.key, height: 300, width: 400, crop: :fill  %>
    <%#= link_to "delete image", photo.purge %>
  <%# end %>
  <% @project.photos.each do |photo| %>
      <div class="project-show-card__image">
      <%= cl_image_tag photo.key %>
      <%= link_to delete_photo_attachment_project_path(@project, photo),
        method: :delete,
        data: { confirm: 'Veux-tu vraiment supprimer la photo ?' } do %>
        <p>❌</p>
      <% end %>
    </div>
  <% end %>

<% end %>

<% if @project.illustrations %>
  <% @project.illustrations.each do |illustration| %>


    <% illustration.photos.each do |photo| %>
      <%= cl_image_tag photo.key %>
      <%= link_to delete_photo_attachment_project_illustration_path(@project, illustration, photo),
        method: :delete,
        data: { confirm: 'Veux-tu vraiment supprimer la photo ?' } do %>
        <p>❌</p>
      <% end %>

    <% end %>

  <% end %>
<% end %>

</div>



<br>
<%= link_to "Home Page", root_path %>
<br>
<%= link_to "modifier", edit_project_path(@project) %>
<br>
<%= link_to "supprimer", project_path(@project), method: :delete, data: {confirm: "certain de vouloir supprimer ce projet?"} %>
<br>
<br>
<h3>Ajouter des photos</h3>
<%= simple_form_for [@project, @illustration] do |f| %>
  <%= f.input :photos, as: :file, input_html: {multiple: true}  %>
  <%= f.submit "Ajouter" %>
<% end %>

<div class="container show-project">

 <!--  <div class="sticky"> -->
    <div class="infos d-flex justify-content-between align-items-center">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><%= @project.name %></h5>
        <p class="mb-0 mx-2"> - </p>
        <p class="mb-0 thin"><%= @project.date %></p>
        <p class="mb-0 mx-2"> - </p>
        <p class="mb-0 thin"><%= @project.location %></p>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <p class="mb-0 thin"><%= @project.description %></p>
        <% if user_signed_in? %>
          <%= link_to edit_project_path(@project) do %>
            <i class="far fa-edit ml-3"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  <!-- </div> -->

<!-- carousel -->
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <% (@count_photos - 1).times do |n|%>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= n += 1 %>"></li>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <!-- first image of the project -->
      <div class="carousel-item active">
        <%= cl_image_tag @all_photos.first.key %>
        <% if user_signed_in? %>
          <% if @all_photos.first.record_type == "Project" %>
            <%= link_to delete_photo_attachment_project_path(@project, @all_photos.first), method: :delete, data: { confirm: 'Veux-tu vraiment supprimer la photo ?' } do %>
              <i class="far fa-times-circle delete-photo"></i>
            <% end %>
          <% else %>
            <%= link_to delete_photo_attachment_project_illustration_path(@project, @project.illustrations.first, @project.illustrations.first.photos.first), method: :delete, data: { confirm: 'Veux-tu vraiment supprimer la photo ?' } do %>
              <i class="far fa-times-circle delete-photo"></i>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <!-- other image of the project less the first one -->
      <% @all_photos.drop(1).each do |photo| %>
        <div class="carousel-item">
          <div class="show-image">
            <%= cl_image_tag photo.key %>
            <% if user_signed_in? %>
              <% if photo.record_type == "Project" %>
                <%= link_to delete_photo_attachment_project_path(@project, photo), method: :delete, data: { confirm: 'Veux-tu vraiment supprimer la photo ?' } do %>
                  <i class="far fa-times-circle delete-photo"></i>
                <% end %>
              <% else %>
                <%= link_to delete_photo_attachment_project_illustration_path(@project, photo.record_id.to_i, photo), method: :delete, data: { confirm: 'Veux-tu vraiment supprimer la photo ?' } do %>
                  <i class="far fa-times-circle delete-photo"></i>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
<!-- fin du carousel -->

<% if user_signed_in? %>
  <div class="text-center mt-3">
    <i class="fas fa-plus" id="btn-add-photos"></i>
  </div>
<% end %>

  <div class="d-flex justify-content-center my-3">
    <div class="add-photos animated fadeIn">
      <h5 class="text-center">Add photo(s)</h5>
      <%= simple_form_for [@project, @illustration] do |f| %>
        <%= f.input :photos, as: :file, input_html: {multiple: true}, label: false %>
        <%= f.submit "confirm", class:"btn-white" %>
      <% end %>
    </div>
  </div>

</div> <!-- fin du container -->


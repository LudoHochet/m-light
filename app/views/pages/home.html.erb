<%#= link_to "ajouter un projet", new_project_path %>


<div class="container">
  <% if @projects %>
    <div class="cards">
      <% @projects.each do |project| %>
        <% if project.photos.attached? %>
          <%= link_to project_path(project) do %>
            <div class="card-project draw" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url('<%= cl_image_path project.photos.first.key %>');">
              <p class="project-name"><%= project.name %></p>
            </div>
          <% end %>
        <% else %>
          <% if project.illustrations %>
            <%= link_to project_path(project) do %>
              <div class="card-project draw" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url('<%= cl_image_path project.illustrations.first.photos.first.key %>');">
                <p class="project-name"><%= project.name %></p>
              </div>
            <% end %>
          <% else %>
            <%= link_to project_path(project) do %>
              <div class="card-project draw" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1544981037-82284dcf0a0f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60);">
                <p class="project-name"><%= project.name %></p>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %> <!-- end of if @projects -->
</div> <!-- end of container -->


